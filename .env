# API Settings
DEBUG=True
API_V1_STR=/api/v1
PROJECT_NAME=Variant Annotation and Interpretation API
VERSION=1.0.0

# External API Settings
ENSEMBL_VEP_URL=https://rest.ensembl.org
CLINVAR_API_URL=https://api.ncbi.nlm.nih.gov/variation/v0
# Uncomment and add your API keys if you have them
# ENSEMBL_API_KEY=your_ensembl_api_key
# CLINVAR_API_KEY=your_clinvar_api_key

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS='[".vcf", ".vcf.gz"]' # a JSON list of allowed file extensions
UPLOAD_DIR=data/uploads
PROCESSED_DIR=data/processed

# VEP Settings
VEP_SCRIPT=/bin/echo # TODO: add the path to the VEP script
VEP_DATA_DIR=data/vep_data
VEP_CACHE_DIR=data/vep_cache
VEP_SPECIES=homo_sapiens
VEP_ASSEMBLY=GRCh38

# Batch Processing Settings
BATCH_SIZE=1000
MAX_CONCURRENT_JOBS=4

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
# Uncomment to enable file logging
# LOG_FILE=logs/app.log